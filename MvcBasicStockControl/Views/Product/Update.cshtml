@model MvcBasicStockControl.Models.Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Update", "Product", FormMethod.Post))
{
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <br />
        @Html.LabelFor(a => a.Brand)
        @Html.TextBoxFor(a => a.Brand, new { @class = "form-control", required = "required" })
        <br />
        @Html.LabelFor(a => a.ProductName)
        @Html.TextBoxFor(a => a.ProductName, new { @class = "form-control", required = "required" })
        <br />
        @Html.LabelFor(a => a.Price)
        @Html.TextBoxFor(a => a.Price, new { @class = "form-control" , required="required" })
        <br />
        @Html.LabelFor(a => a.Stock)
        @Html.TextBoxFor(a => a.Stock, new { @class = "form-control", required = "required" })
        <br />
        <label>Choose Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categorynames,"CategoryId","CategoryName"))"></select>
        @*@Html.DropDownListFor(c=> c.Category.CategoryId,(List<SelectListItem>)ViewBag.Categorynames, new { @class = "form-control" })*@
        <br />


    </div>
    <div>
        <button class="btn btn-block"><strong>Update</strong></button>
    </div>
}