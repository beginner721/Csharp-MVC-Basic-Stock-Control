@model MvcBasicStockControl.Models.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Choose Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categorynames,"CategoryId","CategoryName"))"></select>
    </div>
    <div>
        <label>Product Name</label>
        <input type="text" class="form-control" name="ProductName" required="" />
    </div>
    <div>
        <label>Brand</label>
        <input type="text" class="form-control" name="Brand" required=""/>
    </div>
    <div>
        <label>Price</label>
        <input type="text" class="form-control" name="Price" required=""/>
        <div>
            <label>Unit In Stock</label>
            <input type="text" class="form-control" name="Stock" required=""/>
        </div>
        <div style="margin-top:15px;">
            <button class="btn btn-info">Add Product</button>
        </div>
    </div>

</form>

