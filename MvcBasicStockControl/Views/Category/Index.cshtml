@using MvcBasicStockControl.Models
@using X.PagedList.Mvc.Core
@using X.PagedList

@model X.PagedList.IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Operations</th>

    </tr>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th>@category.CategoryId</th>
                <td>@category.CategoryName</td>
                <td>
                    <a href="/Category/Delete/@category.CategoryId" class="btn btn-danger" onclick="return confirm('Are you sure to delete?')">Delete</a>
                    <a href="/Category/Update/@category.CategoryId" class="btn btn-success">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)ViewBag.OnePageOfCategories, page => Url.Action("Index", new { page }))
